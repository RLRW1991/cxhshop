/**index.wxss**/
.userinfo {
    width: 750rpx;
    height: 310rpx;
    background:url('http://test5.tp-shop.cn/template/mobile/new2/static/images/bjm.jpg') no-repeat 0 0;
    background-size: cover;
    color: #fff;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin:0 40rpx;
  border-radius: 50%;
}
.user-box{
    position: relative;
    display: flex;
    align-items: center;
    height: 222rpx;
    font-size: 36rpx;
}
.set-btn{
    position: absolute;
    right: 40rpx;
    top: 40rpx;
    width: 60rpx;
    height: 60rpx;
}
.user-mes{
    display: flex;
    height: 88rpx;
}
.mes-item{
    width: 50%;
    text-align: center;
}
.mes-num{
    font-size: 36rpx;
    line-height: 54rpx;
}
.mes-title{
    font-size: 26rpx;
}
.my-order{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 70rpx;
    margin-top: 20rpx;
    background-color: #fff;
    border-bottom:1px solid #f5f5f5;
}
.order-ico{
    width: 36rpx;
    height: 40rpx;
    margin-left: 40rpx;
    margin-right: 20rpx;
}
.arrow-right{
    width: 32rpx;
    height: 32rpx;
    margin-right: 20rpx;
}
.all-order{
    display: flex;
    font-size: 28rpx;
    color: #777;
}
.order-title{
    display: flex;
    font-size: 32rpx;
    color: #444;
}
.order-list{
    display: flex;
    height: 100rpx;
    padding: 50rpx 0;
    background-color: #fff;
}
.order-item{
    position: relative;
    width: 25%;
    text-align: center;
    font-size: 24rpx;
}
.order-pic{
    margin: 0 auto;
}
.order-pic0{
    width: 78rpx;
    height: 66rpx;
}
.order-pic1{
    width: 70rpx;
    height: 64rpx;
}
.order-pic2{
    width: 64rpx;
    height: 64rpx;
}
.order-pic3{
    width: 65rpx;
    height: 64rpx;
}
.order-des{
    height: 34rpx;
    line-height: 34rpx;
    color: #444;
}
.order-num{
    position: absolute;
    right: 40rpx;
    top:-25rpx;
    width: 50rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 50%;
    background-color: rgba(217,81,99,0.8);
    color: #fff;
}
.wallet-item{
    width: 33.33%;
    text-align: center;
}
.wallet-num{
    color: #f23030;
    font-size: 36rpx;
    height: 64rpx;
    line-height: 64rpx;
    overflow: hidden;
}
.wallet-des{
    height: 36rpx;
    line-height: 36rpx;
    font-size: 24rpx;
    color: #444;
}
.manage-list{
    background-color: #fff;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
}
.manage-item{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 90rpx;
    border-bottom:1px solid #f5f5f5;
}












