/* order_list.wxss */
.type-navbar{
    white-space: nowrap;
    display: flex;
    width: 100%;
    height:80rpx;
    background-color: #fff;
}
.type-box{
    width:25%;
    box-sizing: border-box;
    font-size: 28rpx;
    line-height: 76rpx;
    padding: 0 20rpx;
    text-align: center;
    display: inline-block;
    overflow: hidden;
}
.type-navbar-item{
    border-bottom: 4rpx solid #fff;
}
.type-item-on{
    border-bottom: 4rpx solid #e64340;
}
.goods-container{
    display: flex;
    justify-content: space-between;  
    flex-wrap:wrap;
    box-sizing: content-box;
    padding: 20rpx 0;
}
.goods-box{
    width: 100%;
    background-color: #fff;
    padding: 0 30rpx;
    margin-bottom: 20rpx;
    font-size: 28rpx;
}
.goods-title{
    display: flex;
    justify-content:space-between;
    align-items:center;
    height: 100rpx;
}
.order-number{
    font-size: 24rpx;
    color: #666;
}
.pay-status{
    color:#f23030;
}
.goods-cont{
    padding: 20rpx 0;
    display: flex;
    justify-content:space-between;
}
.img-box{
    width: 180rpx;
    height: 180rpx;
}
.goods-mes{
    width: 490rpx;
}
.goods-name{
    height: 60rpx;
    margin: 16rpx 0;
    overflow: hidden;
    line-height: 30rpx;
    color: #333;
    word-break: break-all;
}
.goods-price{
    color: #f23030;
    padding-bottom: 20rpx;
}
.goods-num{
    color: #999;
}
.goods-tips{
    height: 60rpx;
    padding: 50rpx 0;
    display: flex;
    justify-content:space-between;
    align-items:center;
}
.order-total{
    display: flex;
    justify-content:flex-start;
    font-size: 24rpx;
    color: #333;
}
.goods-total{
    margin-right:20rpx;
    color:#f23030;
}
.goods-btn{
    width: 150rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border:1px solid #eee;
}
.payment .goods-btn,.evaluate .goods-btn{
    float: right;
}
.cancel-pay,.see-logistics{
    margin-right: 20rpx;
}
.immediate-pay{
    color: #fff;
    background-color:#f23030;
    border-color:#f23030;
}
