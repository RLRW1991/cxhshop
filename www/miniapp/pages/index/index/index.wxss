.search-wrap{
    height: 88rpx;
}
.search-box{
    width: 100%;
    height: 88rpx;
    background: linear-gradient(rgba(0,0,0,0.3),rgba(255,255,255,0));
}
.logo{
    float: left;
    width: 117rpx;
    height: 45rpx;
    margin:21rpx 20rpx 0;  
}
.search-inner{
    float: left;
    display: flex;
    margin-top: 15rpx;
    width: 490rpx;
    height: 58rpx;
    border-radius: 20rpx;
    background-color: #fff;
}
.search-img{
    margin:9rpx 10rpx;
    width: 30rpx;
    height: 30rpx;
}
.search-cont{
    height: 58rpx;
    width: 430rpx;
    line-height: 58rpx;
    font-size: 28rpx;
    color: #666;
}
.search-fixed{
    position: fixed;
    top: 0;
    left: 0;
    background: linear-gradient(rgba(242,48,48,0.8),rgba(242,48,48,0.8));
    z-index: 10;
}
.swiper_box {
    width: 100%;
}

swiper-item image {
    width: 100%;
    height: 300rpx;
    display: inline-block;
    overflow: hidden;
}

.venues_box {
    background-color: #fff;
    padding: 20rpx 10rpx;
}

.venues_item {
    display: block;
    float: left;
    width: 25%;
    text-align: center;
    margin: 25rpx 0;
}

.venues_item image{
    vertical-align: middle;
    width: 90rpx;
    height: 90rpx;
    border: 0;
}

.venues_item view{
    font-size: 26rpx;
    margin-top: 10rpx;
}

.choice_box {
    font-size: 12px;
}
.choice_box .choice_list .choice_item{
    width: 368rpx;
    float: left;
    margin: 2rpx;
    background-color: #fff;
}
.choice_box .choice_list image {
    width: 100%;
    height: 368rpx;
}

.choice_box .choice_list .title {
    height: 72rpx;
    line-height: 36rpx;
    font-weight: bold;
    text-align: center;
    color: #333;
}

.choice_box .choice_list .choice_footer {
    display: block; 
    margin: 15rpx 5rpx;
    position: relative;
    height: 30rpx;
    line-height: 17rpx;
}

.choice_box .choice_list .choice_footer .price {
  color: #f23030;
}

.choice_box .choice_list .choice_footer .similer {
    display: block;
    position: absolute;
    top: 0;
    right: .21333rem; 
    text-align: center;
    color: #686868;
    width: 2.13333rem;
    height: 30rpx;
    line-height: 17rpx;
}

.banner {
    width: 100%;
    height: 76rpx;
}